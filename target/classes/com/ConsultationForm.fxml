<?xml version="1.0" encoding="UTF-8"?>
<?language fx="http://javafx.com/fxml/1"?>
<?import javafx.fxml.FXML?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.SpinnerValueFactory?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ConsultationController">
    <center>
        <GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <hgap>10</hgap>
            <vgap>10</vgap>

            <!-- First Name -->
            <Label text="Prénom du patient:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="firstNameField" promptText="Entrez le prénom" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Last Name -->
            <Label text="Nom du patient:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="lastNameField" promptText="Entrez le nom" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Age -->
            <Label text="Âge du patient:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="ageField" promptText="Entrez l'âge" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- Consultation Time -->
            <Label text="Heure de la consultation:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Spinner fx:id="timeHourSpinner" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <valueFactory>
                    <javafx.scene.control.SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="23" initialValue="0" wrapAround="true"/>
                </valueFactory>
            </Spinner>
            <Spinner fx:id="timeMinuteSpinner" GridPane.rowIndex="3" GridPane.columnIndex="2">
                <valueFactory>
                    <javafx.scene.control.SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="59" initialValue="0" wrapAround="true"/>
                </valueFactory>
            </Spinner>

            <!-- Consultation Duration -->
            <Label text="Durée de la consultation:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Spinner fx:id="durationHourSpinner" GridPane.rowIndex="4" GridPane.columnIndex="1">
                <valueFactory>
                    <javafx.scene.control.SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="23" initialValue="0" wrapAround="true"/>
                </valueFactory>
            </Spinner>
            <Spinner fx:id="durationMinuteSpinner" GridPane.rowIndex="4" GridPane.columnIndex="2">
                <valueFactory>
                    <javafx.scene.control.SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="59" initialValue="0" wrapAround="true"/>
                </valueFactory>
            </Spinner>

            <!-- Additional Information -->
            <Label text="Informations supplémentaires:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextArea fx:id="additionalInfoArea" promptText="Entrez des informations supplémentaires" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <!-- Submit Button -->
            <Button text="Soumettre" GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.halignment="RIGHT" onAction="#handleSubmit"/>
        </GridPane>

    </center>
</BorderPane>