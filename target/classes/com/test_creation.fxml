<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="630.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.TestCreationController">
    <fx:include source="bar.fxml" />
    <AnchorPane layoutX="154.0" prefHeight="630.0" prefWidth="847.0">
        <TextField fx:id="testNameField" layoutX="427.0" layoutY="80.0" prefHeight="35.0" prefWidth="336.0" promptText="Nom du test" style="-fx-border-color: #03B5AA; -fx-border-width: 0.5px; -fx-border-radius: 2;" />
        <TextArea fx:id="testDescriptionField" layoutX="427.0" layoutY="140.0" prefHeight="158.0" prefWidth="336.0" promptText="Description du test" style="-fx-border-color: #03B5AA; -fx-border-width: 0.5px; -fx-border-radius: 2;" />
        <VBox fx:id="questionsContainer" layoutX="80.0" layoutY="320.0" prefHeight="200.0" prefWidth="688.0" style="-fx-border-color: #03B5AA; -fx-border-width: 0.5px; -fx-border-radius: 2;" />
        <Button fx:id="addQuestionButton" layoutX="134.0" layoutY="537.0" mnemonicParsing="false" onAction="#handleAddQuestion" prefHeight="35.0" prefWidth="246.0" style="-fx-background-color: #023436;" text="Ajouter une question" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
        <Button fx:id="saveTestButton" layoutX="466.0" layoutY="537.0" mnemonicParsing="false" onAction="#handleSaveTest" prefHeight="35.0" prefWidth="246.0" style="-fx-background-color: #023436;" text="Enregistrer le test" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
        <Label fx:id="errorLabel" layoutX="14.0" layoutY="420.0" textFill="RED" />
      <Text fill="#03b5aa" layoutX="80.0" layoutY="99.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Nouveau test">
         <font>
            <Font name="Nirmala UI Bold" size="30.0" />
         </font>
      </Text>
    </AnchorPane>
</AnchorPane>
